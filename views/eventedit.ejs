<% layout('layout/boilerplate') %>
<%- include('./partials/navbar')%>
<link rel="stylesheet" href="/stylesheets/input.css">  
<link rel="stylesheet" href="/stylesheets/button.css"> 
<link rel="stylesheet" href="/stylesheets/addEvent.css" />
  <div class="contain">
    <div class="row layer">
      <div class="col-lg-6  left">
        <div class="align-items-center">
          <img src="\assets\icons\arrow.png" alt=""  class="arrow" height="20px" />
          <span class="header arrow-text" > Add Event</span><br />
        </div>
  
        <img src="\assets\bg\event.png" class="event-img" />
      </div>

      <div class="col-lg-6 right">

        <h4 class="mt-3 mb-1 text-center fw-bold">Event Information</h4>

        <form action="/events/<%=event._id%>/edit?_method=PUT" method="post" class="row g-2 px-5 needs-validation" novalidate>
          
          <div class="form-group mb-1">
            <label for="eventName" class="form-label fw-bold">Event name</label>
          <input type="text" name="name" class="form-control input" id="eventName" value=" <%= event.name %>  " />
          </div>

          <div class="form-group mb-1">
          <label for="desc" class="form-label  fw-bold">Event Description</label>
          <textarea class="form-control input" name="description" rows="1" cols="1" id="desc"> <%= event.description %> </textarea>
        </div>

          <div class="form-group mb-1">
          <label for="url" class="form-label fw-bold">Event Url</label>
          <input type="url" name="eventUrl" class="form-control input" id="url"  value="<%= event.eventUrl %>"/>
        </div>

          <div class="form-group mb-1">
          <label for="eventName" class="form-label fw-bold">Event Date</label>
          <input type="date" name="eventDate" placeholder="username" class="form-control input" id="eventName" value="<%=event.eventDate.toJSON().slice(0,10)%>" />
        </div>

            <div class="col-md-6">
              <label for="start" class="form-label fw-bold" >Start Time</label>
              <input type="time" name="sTime" class="form-control input" id="start" value="<%=startTime%>" />
            </div>

            <div class="col-md-6">
              <label for="end" class="form-label fw-bold">End Time</label>
              <input type="time" name="eTime" class="form-control input" id="end"  value="<%=endTime %>"/>
            </div>
  
          <div class="invalid-feedback">Please provide every details</div>
          
            <div class="col-md-6 mt-2 d-grid gap-5">
              <a href="/events" class="btn my-3">Cancel</a>
            </div>

            <div class="col-md-6 mt-2 d-grid gap-5">
              <button class="button my-3" >UPDATE</button>
            </div>
  
        </form>
        <form action="/events/<%=event._id%>?_method=DELETE" method="post">
            <button  class="btn del-event">Delete this Event</button>
      </form>
      </div>
    </div>
  </div>
</div>
