<% layout('layout/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/login.css"> 
<link rel="stylesheet" href="/stylesheets/input.css">  
<link rel="stylesheet" href="/stylesheets/button.css"> 

<div class="container">
    <div class="text-center logo-mobile m-5 ">
        <img  src="Assets/Logo/Logo.png" class="login-img" alt="Logo" height="100px">
    </div>
    <div class="row  d-flex justify-content-center ">
        <div class="col-md-6 p-5 mt-5 ">
            <div class="text-center ">
                <img src="\assets\bg\home.png" alt="Image"  class="" height="290px">
            </div>
            <h4 class="my-4 header">Login</h4>
            <form action="/login" method="post" class="d-grid gap-3 validate-form" autocomplete="off" novalidate>
                <input type="text" placeholder="Username" name="username" class="form-control input" required>
                <input type="password" placeholder="Password" name="password" class="form-control input" required>
                <div class="invalid-feedback">
                    Incorrect Username or Password
                  </div>
                <button class=" button  my-3" >LOGIN</button>
            </form>
        </div>
        <div class="col-md-6 p-5 mt-4 mb-3">
            <div class="text-end logo">
                <img  src="Assets/Logo/Logo.png" alt="Logo" height="100px">
            </div>
            <div class="mt-5">
                <h4 class="my-4 header">Register</h4>
                <form action="/register" method="post" class="d-grid gap-3 validate-form" novalidate autocomplete="off">
                    <input type="text" placeholder="Your Name" name="name"  class="form-control input" required>
                    <input type="text" placeholder="Register ID" name="register" class="form-control input" required>
                    <input type="email" placeholder="Email ID" name="email" class="form-control input" required >
                    <input type="text" placeholder="Username" name="username" class="form-control input" required>
                    <input type="password" placeholder="Password" name="password" class="form-control input" required>
                    <div class="invalid-feedback">
                        All Fields are required
                      </div>
                    <button class="button my-3">REGISTER</button>
                </form>
            </div>
        </div>
    </div>


</div>